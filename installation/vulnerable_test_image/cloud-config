#cloud-config
package_upgrade: true
packages:
  - docker.io
write_files:
  - path: /opt/vmclarity-test/.goat
    permissions: "0644"
  - path: /etc/systemd/system/goat-image.service
    permissions: "0644"
    content: |
      [Unit]
      Description=Deploy test files
      Requires=docker.service
      After=network.target docker.service

      [Service]
      Type=oneshot
      WorkingDirectory=/opt/vmclarity-test
      ExecStartPre=docker pull poke/goat-image:latest
      ExecStart=docker run --rm --name %n --privileged \
          -v /opt/vmclarity-test:/opt/vmclarity-test \
          poke/goat-image:latest \
          /opt/vmclarity-test

      [Install]
      WantedBy=multi-user.target
runcmd:
  - [ systemctl, daemon-reload ]
  - [ systemctl, start, docker.service ]
  - [ systemctl, start, goat-image.service ]